<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/money_back"
            android:text="Money"
            android:fontFamily="@font/product_sans_regular"
            android:textAllCaps="false"
            android:textSize="55sp"
            android:textColor="#FFFFFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bluetab"
                android:padding="10dp"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bluetab"
                android:padding="10dp"
                android:text="Time"
                android:textAlignment="center"
                android:textSize="22sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Pay with any Card"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#39AA57"
            android:textSize="30sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="36dp"
            android:padding="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exp Date"
            android:layout_weight="0.2"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="4dp"
            android:padding="14dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CVV"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="8dp"
            android:layout_marginRight="36dp"
            android:padding="14dp" />

    </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Holder's Name"
            android:textSize="20sp"
            android:background="@drawable/border"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="36dp"
            android:padding="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:srcCompat="@drawable/line"
            android:layout_marginHorizontal="@dimen/_12sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:src="@drawable/gpay"
                android:layout_marginLeft="36dp"/>

<!--            <ImageButton-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="CVV"-->
<!--                android:layout_weight="0.5"-->
<!--                android:textSize="20sp"-->
<!--                android:background="@drawable/border"-->
<!--                android:src="@drawable/paytm"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:layout_marginRight="36dp"-->
<!--                android:padding="14dp" />-->

        </LinearLayout>

<!--        <ImageButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/border"-->
<!--            android:src="@drawable/upi" />-->


        <Button
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/moneyb"
            android:text="Proceed to Choose the NGO"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
